{
  "name": "breeze_next",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build --turbopack",
    "start": "next start",
    "lint": "eslint",
    "mqtt:start": "docker-compose up -d",
    "mqtt:stop": "docker-compose down",
    "mqtt:logs": "docker-compose logs -f mosquitto",
    "stream:audio": "node ./dev-tools/http_audio_emulator.js",
    "stream:video": "node ./dev-tools/http_video_emulator.js",
    "stream:both": "concurrently \"npm run stream:audio\" \"npm run stream:video\"",
    "interphone:test": "node ./dev-tools/unified_interphone_emulator.js",
    "interphone:emulate": "node ./dev-tools/run_interphone_emulators.js",
    "interphone:unified": "node ./dev-tools/esp32_unified_interphone_emulator.js",
    "interphone:two-device": "node ./dev-tools/two_device_unified_emulator.js",
    "interphone:clean": "node ./dev-tools/clean_start_unified.js",
    "interphone:audio": "node ./dev-tools/esp32_audio_emulator.js",
    "interphone:video": "node ./dev-tools/esp32_video_emulator.js",
    "setup": "pnpm install && docker-compose up -d",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop breeze-portal",
    "pm2:restart": "pm2 restart breeze-portal",
    "pm2:reload": "pm2 reload breeze-portal",
    "pm2:delete": "pm2 delete breeze-portal",
    "pm2:logs": "pm2 logs breeze-portal",
    "pm2:monit": "pm2 monit",
    "pm2:status": "pm2 status",
    "production": "pnpm build && pnpm mqtt:start && pnpm pm2:start",
    "production:stop": "pnpm pm2:stop && pnpm mqtt:stop"
  },
  "dependencies": {
    "html2canvas": "^1.4.1",
    "lucide-react": "^0.469.0",
    "mqtt": "^5.14.0",
    "next": "15.5.0",
    "openai": "^5.23.0",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "concurrently": "^9.2.1",
    "eslint": "^9",
    "eslint-config-next": "15.5.0",
    "pm2": "^6.0.8",
    "tailwindcss": "^4",
    "typescript": "^5"
  }
}
